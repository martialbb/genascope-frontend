---
import SimpleLayout from '../../layouts/SimpleLayout.astro';
import SimplifiedPatientAccess from '../../components/SimplifiedPatientAccess';

// Get the invite token from the URL parameter
const { token } = Astro.params;

// This page uses the new simplified access flow
---

<SimpleLayout title="Access Your Health Assessment - Genascope">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center mb-4 text-blue-700">Access Your Health Assessment</h1>
    <p class="text-center text-gray-600 mb-8">
      Quick and secure access to your genetic health consultation.
    </p>
    
    <SimplifiedPatientAccess client:load inviteToken={token} />
  </main>
</SimpleLayout>
