---
import SimpleLayout from '../../layouts/SimpleLayout.astro';
import PatientRegistration from '../../components/PatientRegistration';

// Get the invite token from the URL parameter
const { token } = Astro.params;

// This page doesn't need server-side data as the validation will happen client-side
---

<SimpleLayout title="Complete Registration - Genascope">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center mb-4 text-blue-700">Complete Your Registration</h1>
    <p class="text-center text-gray-600 mb-8">
      Please complete your registration to access the Cancer-Genix Patient Portal.
    </p>
    
    <PatientRegistration client:load inviteToken={token} />
  </main>
</SimpleLayout>
