---
import SidebarLayout from '../layouts/SidebarLayout.astro';
import AppointmentsList from '../components/AppointmentsList';
---

<SidebarLayout title="Appointments Dashboard - Genascope">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <div class="sm:flex sm:items-center sm:justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-800">Appointments Dashboard</h1>
          <p class="mt-2 text-sm text-gray-600">
            Manage your upcoming and past appointments.
          </p>
        </div>
        <div class="mt-4 sm:mt-0">
          <a
            href="/manage-availability"
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          >
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
            </svg>
            Manage Availability
          </a>
        </div>
      </div>
      
      <div class="mt-8">
        <!-- AppointmentsList will get the clinician ID from localStorage automatically when not provided -->
        <AppointmentsList client:load isClinicianView={true} />
      </div>
      
      <div class="mt-8 bg-gray-50 rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Quick Tips</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="bg-white p-4 rounded-md border border-gray-200">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-gray-900">Virtual Appointments</h3>
                <p class="mt-1 text-sm text-gray-600">
                  Check your email 15 minutes before the appointment for the video call link.
                </p>
              </div>
            </div>
          </div>
          
          <div class="bg-white p-4 rounded-md border border-gray-200">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-gray-900">Cancellations</h3>
                <p class="mt-1 text-sm text-gray-600">
                  Please cancel at least 24 hours in advance to allow other patients to book the slot.
                </p>
              </div>
            </div>
          </div>
          
          <div class="bg-white p-4 rounded-md border border-gray-200">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-gray-900">Calendar Integration</h3>
                <p class="mt-1 text-sm text-gray-600">
                  All appointments are automatically added to your linked calendar.
                </p>
              </div>
            </div>
          </div>
          
          <div class="bg-white p-4 rounded-md border border-gray-200">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-gray-900">Patient Communication</h3>
                <p class="mt-1 text-sm text-gray-600">
                  Use the notes section to prepare for appointments and record key information.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</SidebarLayout>

<script>
  // Simple client-side authentication check
  const token = localStorage.getItem('authToken');
  const userStr = localStorage.getItem('authUser');
  
  if (!token || !userStr) {
    console.log('Appointments Dashboard: Not authenticated, redirecting to login');
    window.location.href = '/login?redirect=/appointments-dashboard';
  }
</script>
